##
## Main arguments, all optional
##
title: Test Panel
widget_dimensions: [120, 120]
widget_margins: [5, 5]
columns: 8
global_parameters:
    use_comma: 0
    precision: 1
    use_hass_icon: 1
    namespace: default
    devices:
      light:
        icon_on: mdi-lightbulb-on
        icon_off: mdi-lightbulb
        icon_style_active: "color: yellow"
        icon_style_inactive: "color: grey"

    clock:
        widget_type: clock
        time_format: 24hr
        date_format_country: "dk"
        date_format_options:
          weekday: "short"
          day: "numeric"
          month: "numeric"
        date_style: "color: white; font-size: 200%"
        time_style: "color: pink"

##label:
##    widget_type: label
##    text: Hello World

layout:
    -
    - light.conservatory_couch, light.dining_table_lights(1x1)
